#!/bin/bash

if [[ $# != 1 ]]; then
    echo "Usage: $0 <copyright header file>"
    exit 2
fi

status=0

# Use git to determine the root of the repo
REPO_ROOT=$(git rev-parse --show-toplevel)

copyright_header=$(cat $1)
num_lines=$(echo "$copyright_header" | wc -l)

for f in $(find $REPO_ROOT -name "*.[h,c]pp" -not -path "$REPO_ROOT/External/*"); do
    if [[ $(head -n $num_lines $f) != $copyright_header ]]; then
        echo "$f does not have the correct copyright header. First 4 lines:"
        head -n 4 $f
        echo "-------------------------------------------"
        status=1
    fi
done

exit $status